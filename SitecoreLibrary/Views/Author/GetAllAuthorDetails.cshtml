@model IEnumerable<SitecoreLibrary.Models.Author>

<p>
    @Html.ActionLink("Add New Author", "AddAuthor")
</p>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.Authorid)
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAuthorDetails", new { id = item.Authorid }) |
                @Html.ActionLink("Delete", "DeleteAuthor", new { id = item.Authorid }, new { onclick = "return confirm('Are sure wants to delete?');" })
            </td>
        </tr>

    }

</table>
