@using System.Web.Mvc.Html
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@model PagedList.IPagedList<SitecoreLibrary.Models.BooksWithAuthor>

<h2>LIST OF BOOKS</h2>

<p>
    @Html.ActionLink("Add New Book", "AddBookWithAuthor")
</p>

@{
    var bookFilterList = new List<string> {"All books", "Available books", "Taken books" } as IEnumerable<string>;
}

@using (Ajax.BeginForm("GetAllBookAuthorDetails", "BookWithAuthor", new AjaxOptions
{
    HttpMethod = "Get",
    UpdateTargetId = "SearchResults",
    InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
}))
{
    <div class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            @Html.DropDownList("SelectList", new SelectList(bookFilterList), "Select books plan", new { onchange = "$(this.form).submit();" })
    </div>
}

@Html.Partial("_BooksWithAuthorsTable")

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("GetAllBookAuthorDetails",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>